          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@example.com\",\n  \"password\": \"P@ssw0rd!\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const payload = pm.response.json();",
                  "pm.test(\"login succeeded\", function () {",
                  "    pm.expect(payload.success).to.be.true;",
                  "    pm.expect(payload.data).to.have.property(\"accessToken\");",
                  "    pm.expect(payload.data).to.have.property(\"refreshToken\");",
                  "});",
                  "",
                  "pm.collectionVariables.set(\"ACCESS_TOKEN\", payload.data.accessToken);",
                  "pm.collectionVariables.set(\"REFRESH_TOKEN\", payload.data.refreshToken);",
                  "",
                  "pm.test(\"tokens stored in collection variables\", function () {",
                  "    pm.expect(pm.collectionVariables.get(\"ACCESS_TOKEN\")).to.have.length.above(10);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
